<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background ="@drawable/footer">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allergy Prediction: None"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#00FF00"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:layout_below="@id/heading"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No allergy detected. Continue with your regular routine."
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:paddingBottom="24dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precautions:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#AF47D2"
            android:paddingBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Maintain a balanced diet to boost your immune system."
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:gravity="center_horizontal"
            android:textAlignment="viewStart"
            tools:ignore="RtlCompat"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Keep your living environment clean to prevent potential allergens."
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:gravity="center_horizontal"
            android:textAlignment="viewStart"
            tools:ignore="RtlCompat"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Stay hydrated by drinking plenty of water throughout the day."
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:gravity="center_horizontal"
            android:textAlignment="viewStart"
            tools:ignore="RtlCompat"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Regularly exercise to maintain overall physical health."
            android:textSize="16sp"
            android:paddingBottom="8dp"
            android:gravity="center_horizontal"
            android:textAlignment="viewStart"
            tools:ignore="RtlCompat"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</RelativeLayout>
